<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="pane" stylesheets="@MainApplication.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ntnu.team1.mainApplication.MainApplicationController">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <MenuBar fx:id="menuBar" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
            <Menu mnemonicParsing="false" text="File">
                <MenuItem fx:id="menuFileClose" mnemonicParsing="false" onAction="#exit" text="Close" />
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <MenuItem fx:id="menuEditAdd" mnemonicParsing="false" onAction="#addNewTask" text="Add new task" />
                <MenuItem fx:id="menuEditEdit" mnemonicParsing="false" text="Edit selected" />
                <MenuItem fx:id="menuEditDelete" mnemonicParsing="false" text="Delete selected" />
                <MenuItem fx:id="menuEditCategory" mnemonicParsing="false" onAction="#addNewCategory" text="Add new category" />
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem fx:id="menuHelpAbout" mnemonicParsing="false" text="About" />
            </Menu>
        </MenuBar>
        <BorderPane fx:id="view" VBox.vgrow="ALWAYS">
            <left>
                <VBox fx:id="sideMenu" prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER">
                     <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#switchToTasks" text="Tasks">
                  <VBox.margin>
                     <Insets bottom="10.0" left="20.0" right="20.0" />
                  </VBox.margin>
               </Button>
                     <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#switchToCategory" text="Categories">
                  <VBox.margin>
                     <Insets bottom="10.0" left="20.0" right="20.0" />
                  </VBox.margin>
               </Button>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Categories:" />
                    <Separator prefWidth="200.0" />
                    <VBox fx:id="categoryButtonList" prefHeight="40.0" prefWidth="200.0" />
               <BorderPane.margin>
                  <Insets left="10.0" right="5.0" />
               </BorderPane.margin>
               <padding>
                  <Insets top="10.0" />
               </padding>
                </VBox>
            </left>
        </BorderPane>
    </VBox>
</AnchorPane>

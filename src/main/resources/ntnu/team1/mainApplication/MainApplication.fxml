<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="pane" prefHeight="250.0" prefWidth="170.0" stylesheets="@MainApplication.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ntnu.team1.mainApplication.MainApplicationController">
    <VBox prefHeight="182.0" prefWidth="170.0" AnchorPane.bottomAnchor="128.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <BorderPane fx:id="view" VBox.vgrow="ALWAYS">
            <left>
                <VBox fx:id="sideMenu" prefHeight="200.0" prefWidth="170.0" BorderPane.alignment="CENTER">
                 <MenuBar fx:id="menuBar" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
                     <Menu mnemonicParsing="false" text="File">
                         <MenuItem fx:id="menuFileClose" mnemonicParsing="false" onAction="#exit" text="Close" />
                     </Menu>
                     <Menu mnemonicParsing="false" text="Edit">
                         <MenuItem fx:id="menuEditAdd" mnemonicParsing="false" onAction="#addNewTask" text="Add new task" />
                         <MenuItem fx:id="menuEditCategory" mnemonicParsing="false" onAction="#addNewCategory" text="Add new category" />
                     </Menu>
                     <Menu mnemonicParsing="false" text="Help">
                         <MenuItem fx:id="menuHelpAbout" mnemonicParsing="false" text="About" />
                     </Menu>
                 </MenuBar>
                     <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#switchToTasks" styleClass="sideMenuButton" text="Tasks">
                  <VBox.margin>
                     <Insets bottom="10.0" top="20.0" />
                  </VBox.margin>
               </Button>
                     <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#switchToCategory" styleClass="sideMenuButton" text="Categories">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </Button>
                    <Separator prefWidth="200.0" />
                    <VBox fx:id="categoryButtonList" prefHeight="40.0" prefWidth="200.0" />
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </padding>
                </VBox>
            </left>
        </BorderPane>
    </VBox>
   <ImageView fitHeight="128.0" fitWidth="128.0" layoutX="21.0" layoutY="189.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../../../Images/Logo256pxv2.png" />
      </image>
   </ImageView>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="950.0" prefWidth="1273.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ntnu.team1.mainApplication.addTaskDialogController">
      <VBox layoutX="396.0" layoutY="113.0" prefHeight="714.0" prefWidth="173.0">
            <ChoiceBox fx:id="choiceBox" prefWidth="150.0" />
            <Label text="Priority">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <VBox>
               <fx:define>
                  <ToggleGroup fx:id="priority" />
               </fx:define>
               <RadioButton text="1" selected="true" toggleGroup="$priority"/>
               <RadioButton text="2" toggleGroup="$priority"/>
               <RadioButton text="3" toggleGroup="$priority"/>
            </VBox>
      </VBox>
      <VBox layoutX="569.0" layoutY="113.0" prefHeight="375.0" prefWidth="157.0">
            <Label text="Start date:" />
            <DatePicker fx:id="startDate" />
            <Label text="End date:" />
            <DatePicker fx:id="endDate" />
      </VBox>
      <TextArea fx:id="description" layoutX="60.0" layoutY="192.0" prefHeight="291.0" prefWidth="336.0" promptText="Add description">
         <font>
            <Font size="19.0" />
         </font>
      </TextArea>
      <TextArea fx:id="taskName" layoutX="60.0" layoutY="113.0" prefHeight="79.0" prefWidth="336.0" promptText="Add task name">
         <font>
            <Font size="25.0" />
         </font>
      </TextArea>
      <Label layoutX="396.0" layoutY="77.0" text="Category">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <Label layoutX="60.0" layoutY="59.0" text="New Task">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <Button fx:id="cancel" layoutX="60.0" layoutY="507.0" mnemonicParsing="false" prefHeight="67.0" prefWidth="134.0" text="Cancel" onAction="#cancel">
         <font>
            <Font size="30.0" />
         </font>
      </Button>
      <Button fx:id="submitTask" layoutX="262.0" layoutY="507.0" mnemonicParsing="false" prefHeight="67.0" prefWidth="134.0" text="Submit" onAction="#submit">
         <font>
            <Font size="30.0" />
         </font>
      </Button>
</AnchorPane>
